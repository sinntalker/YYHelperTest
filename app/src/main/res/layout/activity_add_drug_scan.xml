<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.sinntalker.sinntest20180503_yy.Fragment.DrugBox.AddDrugScanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6495ED">

        <ImageView
            android:id="@+id/id_imageView_back_addDrugScan"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/common_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="扫描药品条形码"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/id_button_scan_addDrugScan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/message_bg"
        android:layout_gravity="center"
        android:text="扫一扫"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/id_linearLayout_scanMatchResults_addDrugScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="扫描结果"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/id_textView_scanResult_addDrugScan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:gravity="center"
            android:text="扫描结果"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="医药库查询结果"
            android:gravity="center"
            android:textSize="15dp"/>

        <ListView
            android:id="@+id/id_listView_scanSearchResults_addDrugScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

        </ListView>

        <Button
            android:id="@+id/id_button_addDrugToBox_addDrugScan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="添加到我的药箱"/>

    </LinearLayout>

</LinearLayout>
