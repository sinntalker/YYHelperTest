<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sinntalker.sinntest20180503_yy.Fragment.family.AddFriendInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6495ED">

        <ImageView
            android:id="@+id/id_imageView_back_AddFriendInfo"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/common_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFFFFF">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="个人头像"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <ImageView
                android:id="@+id/id_imageView_avatar_addFriendInfo"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:paddingLeft="50dp"
                android:src="@drawable/avatar"/>
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="用户昵称"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/id_textView_userNick_addFriendInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="xxxxx"
                android:textSize="16sp"
                android:gravity="right|center"
                android:paddingRight="20dp"/>
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="手机号"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/id_textView_phone_addFriendInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="xxxxx"
                android:textSize="16sp"
                android:gravity="right|center"
                android:paddingRight="20dp"/>
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="个性签名"
                android:textSize="18sp"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/id_textView_signature_addFriendInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="xxxxx"
                android:textSize="16sp"
                android:gravity="right|center"
                android:paddingRight="20dp"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

    </TableLayout>

    <Button
        android:id="@+id/id_button_add_addFriendInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="添加好友"
        android:textColor="#FFFFFF"
        android:background="@drawable/roundrectanglerlinearlayout_bg"/>

    <Button
        android:id="@+id/id_button_tempContact_addFriendInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="临时会话"
        android:textColor="#FFFFFF"
        android:background="@drawable/roundrectanglerlinearlayout_bg"/>

</LinearLayout>
