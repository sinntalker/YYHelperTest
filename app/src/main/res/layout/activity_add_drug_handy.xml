                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:background="@drawable/edit_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
