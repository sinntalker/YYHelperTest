                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="其他"
                    android:gravity="left|center"/>

                <EditText
                    android:id="@+id/id_editText_other_addDrugHandy"
                    android:layout_width="match_parent"
