                android:background="#000000" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="生产日期"
                    android:gravity="left|center"/>

                <EditText
