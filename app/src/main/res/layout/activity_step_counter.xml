<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sinntalker.sinntest20180503_yy.Fragment.health.StepCounter.StepCounterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6495ED">

        <ImageView
            android:id="@+id/id_imageView_back_stepCounter"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/common_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="计步功能"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

    </RelativeLayout>

    <com.sinntalker.sinntest20180503_yy.Fragment.health.StepCounter.StepArcView
        android:id="@+id/id_stepArcView_stepView_stepCounter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/id_textView_isSupport_stepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="该设备支持计步"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/id_textView_walkPlanSet_stepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/home_question_mark"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="设置每日计划"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/id_textView_historyData_stepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/home_statistical"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="查看历史步数"
        android:textColor="#333333" />

</LinearLayout>
