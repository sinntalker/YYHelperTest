<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sinntalker.sinntest20180503_yy.Fragment.DrugBox.DrugBoxActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#6495ED">

            <ImageView
                android:id="@+id/backToHealth_tools_image"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/common_back"/>

            <TextView
                android:id="@+id/drugBoxNum_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="我的小药箱"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_above="@id/scan_textView"/>

        <ListView
            android:id="@+id/drugs_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </ListView>

        <TextView
            android:id="@+id/drugNumShow_textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="test"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F0F0F0"
        android:layout_above="@id/scan_textView"/>

    <TextView
        android:id="@+id/scan_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view2"
        android:background="#6495ED"
        android:gravity="center"
        android:padding="10dp"
        android:text="扫一扫，添加药品"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F0F0F0"
        android:layout_above="@id/manualAdd_textView"/>

    <TextView
        android:id="@+id/manualAdd_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6495ED"
        android:gravity="center"
        android:padding="10dp"
        android:text="手动添加药品"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:textSize="18sp" />

</RelativeLayout>
